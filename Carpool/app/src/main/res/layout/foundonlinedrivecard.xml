<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_border"
        android:onClick="handleOnlineAcceptedDriveClick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hidden_pooler_uid_online"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hidden_requester_uid_online"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailOnlineDrive"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startCityOnlineDrive"
            android:layout_below="@+id/emailOnlineDrive"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startAddressOnlineDrive"
            android:layout_below="@+id/startCityOnlineDrive"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endCityOnlineDrive"
            android:layout_below="@+id/startAddressOnlineDrive"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destinationOnlineDrive"
            android:layout_below="@+id/endCityOnlineDrive"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>