<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/EmailInput"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/PasswordInput"
            android:hint="@string/email"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/PasswordInput"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/LogInButton"
            android:hint="@string/password"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/LogInButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/SignUpButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/login"
            android:textColor="@android:color/black"
            android:background="#b0e0e6"
            android:onClick="handleClickLogIn"/>
        <Button
            android:id="@+id/SignUpButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/seeRequestsOfflineButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/signup"
            android:textColor="@android:color/black"
            android:background="@android:color/darker_gray"
            android:onClick="handleClickSignUp"/>
            <Button
            android:id="@+id/seeRequestsOfflineButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="@string/see_requests_offline"
            android:textColor="@android:color/black"
            android:background="#b0e0e6"
            android:onClick="handleClickSeeOfflineRequests"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
