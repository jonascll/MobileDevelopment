<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ecf7f9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/find_pooler_list_top_text"
        android:textSize="30sp"
        android:textColor="#0f52ba"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/findPoolerTopText"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_recyclerview"
        android:name="com.example.carpool.RecyclerViewFragment"
        android:id="@+id/recyclerViewFragment"
        android:layout_below="@+id/findPoolerTopText"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>